CXX         = g++
CXXDYLIB    = -dynamiclib
MXX         = mpic++
DYLIB_EXT   = dylib

# optimized-mode
# CXXFLAGS   += -Wall -O3 -DVECLIB -DNDEBUG

# profile-mode
# CXXFLAGS   += -Wall -p -g -O3 -DVECLIB -DNDEBUG

# debug-mode
CXXFLAGS   += -Wall -p -g -O3 -DVECLIB #-DDEBUG

MXXFLAGS   += $(CXXFLAGS) -Wno-long-double
LDFLAGS    += -framework Accelerate
EX_LDFLAGS += -bind_at_load

ifdef STIP
CXXFLAGS += -DSTIP
endif
