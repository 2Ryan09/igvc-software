<!-- !!! Robot.h controls use of USB vs. 1394 cameras !!! -->

<Config>

	<!-- Guppy Misc Settings -->
	<gain>32</gain>
	<shutter>2048</shutter>
	<gamma>0</gamma>
	<auto_gain_and_shutter>0</auto_gain_and_shutter>

	<!-- Guppy White Balance Settings -->
	<red>528</red>
	<blue>646</blue>

	<!-- Vision Processing Settings -->
	<satThresh>70</satThresh>    <!-- higher => more noise/sensitivity -->
	<hueThresh>35</hueThresh>    <!-- higher => more noise/sensitivity -->
	<robotWidth>20</robotWidth>  <!-- lower => we can squeeze through more -->
	<doTransform>1</doTransform> <!-- 1 => use graphics card transformations -->
	<doAdaptive>1</doAdaptive>   <!-- 1 => use use roi box to drive on colors inside it -->
	<maxDiff>40</maxDiff>        <!-- lower => more noise in thresh image -->
	<boxPadding>100</boxPadding>  <!-- lower => wider box -->

	<!-- Robot Misc Settings -->
	<_k>0.40</_k>               <!-- lower => more smooth motor cotrol (averages new motor commands) -->
    <defaultView>5</defaultView>

    <!-- Mapping Settings -->
    <maxFeatures>32</maxFeatures>               <!-- max number for feature corners to find -->
    <minFeatureDistance>10</minFeatureDistance> <!-- min pixel spacing in between two features -->



