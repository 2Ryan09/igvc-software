<Config>

	<!-- Guppy Misc Settings -->
	<useFirewireCamera>0</useFirewireCamera>  <!-- set to 0 to load video -->
	<gain>8</gain>
	<shutter>8</shutter>
	<gamma>0</gamma>
	<auto_gain_and_shutter>0</auto_gain_and_shutter>

	<!-- Guppy White Balance Settings -->
	<red>528</red>
	<blue>646</blue>

	<!-- Vision Processing Settings -->
	<satThresh>70</satThresh>     <!-- higher => more noise/sensitivity -->
	<hueThresh>35</hueThresh>     <!-- higher => more noise/sensitivity -->
	<robotWidth>25</robotWidth>   <!-- lower => we can squeeze through more -->
	<doTransform>01</doTransform> <!-- 1 => use graphics card transformations -->
	<doAdaptive>01</doAdaptive>   <!-- 1 => use use roi box to drive on colors inside it -->
	<maxDiff>40</maxDiff>         <!-- lower => more noise in thresh image -->
	<boxPadding>100</boxPadding>   <!-- lower => wider box -->

	<!-- Robot Misc Settings -->
	<_k>0.30</_k>                       <!-- lower => more smooth motor cotrol (averages new motor commands) -->
    <defaultView>05</defaultView>       <!-- gui slider bar starting value -->
    <motorsMaxSpeed>60</motorsMaxSpeed> <!-- max motor output [0-255] -->

    <!-- Mapping Settings -->
    <maxFeatures>74</maxFeatures>           <!-- max number for feature corners to find -->
    <numFramesBack>03</numFramesBack>       <!-- frames between matching points/features ( >=2 )-->
    <maxFeatureShift>11</maxFeatureShift>   <!-- max allowed feature point movement (in pixels) -->

    <!-- ON/OFF -->
    <doMapping>01</doMapping>
    <useMotors>00</useMotors>
    <doVision>001</doVision>


