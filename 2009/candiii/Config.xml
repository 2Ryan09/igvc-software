<Config>

	<!-- Guppy Misc Settings -->
	<useFirewireCamera>000</useFirewireCamera>  <!-- set to 0 to load video -->
	<gain>16</gain>
	<shutter>100</shutter>
	<gamma>0</gamma>
	<auto_gain_and_shutter>001</auto_gain_and_shutter>

	<!-- Guppy White Balance Settings -->
	<red>517</red>   <!-- old 528 -->
	<blue>602</blue> <!-- old 646 -->

	<!-- Vision Processing Settings -->
	<satThresh>70</satThresh>     <!-- (hsv only) higher => more noise/sensitivity -->
	<hueThresh>35</hueThresh>     <!-- (hsv only) higher => more noise/sensitivity -->
	<robotWidth>15</robotWidth>   <!-- lower => we can squeeze through more -->
	<doTransform>01</doTransform> <!-- 1 => use graphics card transformations -->
	<doAdaptive>01</doAdaptive>   <!-- 1 => use use roi box to drive on colors inside it -->

	<maxDiff>55</maxDiff>         <!-- lower => more noise in thresh image -->
	<boxPadding>45</boxPadding>   <!-- lower => wider box -->
	<k_roi>0.076</k_roi>          <!-- higher => adjust to color in red rectangle faster -->

	<!-- Robot Misc Settings -->
    <defaultView>01</defaultView>       <!-- gui slider bar starting value -->
	<k_motors>0.50</k_motors>           <!-- lower => more smooth motor cotrol (averages new motor commands - vision only) -->
    <motorsMaxSpeed>39</motorsMaxSpeed> <!-- max motor output [0-255] -->

    <!-- Mapping Settings -->
    <maxFeatures>64</maxFeatures>           <!-- max number for feature corners to find -->
    <numFramesBack>02</numFramesBack>       <!-- frames between matching points/features ( >=2 )-->
    <maxFeatureShift>28</maxFeatureShift>   <!-- max allowed feature point movement (in pixels) -->
    <moveTo127>0</moveTo127>                <!-- slowly forget worldmap history -->

    <!-- ON/OFF -->
    <doMapping>001</doMapping>
    <useMotors>00</useMotors>
    <doVision>001</doVision>


