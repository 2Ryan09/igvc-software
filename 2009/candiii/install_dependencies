#!/bin/sh

# feel free to add to this script when you encounter missing libs/files
echo "installing candi dependencies this may take a while..."
echo "multiverse and universe repositories must be enabled!"

sudo apt-get update

echo "opencv"
sudo apt-get --yes install libcv1
sudo apt-get --yes install libcvaux1 
sudo apt-get --yes install libhighgui1
sudo apt-get --yes install libcv-dev

echo "QT"
sudo apt-get --yes install libqt4-core
sudo apt-get --yes install libqt4-xml 
sudo apt-get --yes install libqt4-dev
sudo apt-get --yes install qt4-dev-tools

echo "boost"
sudo apt-get --yes install libboost1.35-dev	#ubuntu 8.10
#sudo apt-get --yes install libboost-dev		#ubuntu 8.04

echo "glut" 
sudo apt-get --yes install libglut-dev

echo "libtool"
sudo apt-get --yes install libtool

echo "g++"
sudo apt-get --yes install g++

echo "IEEE1394"
#sudo apt-get --yes install libdc1394-dev
#sudo apt-get --yes install libavc1394-dev
#sudo apt-get --yes install libraw1394-dev
#sudo apt-get --yes install ?
echo "TODO: install ieee1394"
cd ../libdc1394-2.0.3/
./configure
make
sudo make install
cd ../candiii


echo "done"
echo

